<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/market"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:background="@android:color/white"
        android:src="@drawable/market"/>

    <ImageView
        android:id="@+id/market2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/market"
        android:src="@drawable/market2" />

    <TextView
        android:id="@+id/contact_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingLeft="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/market"
        android:text="Contact Information"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#4689C8"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/phone"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/contact_info"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/phone"/>

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/phone"
        android:layout_toEndOf="@+id/phone"
        android:layout_toRightOf="@+id/phone"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:text="01 - 293 4565  |  0908 569 3912"
        android:textColor="@android:color/black"
        android:textAppearance="?android:textAppearanceMedium" />

    <ImageView
        android:id="@+id/email"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/email" />

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/email"
        android:layout_toEndOf="@+id/email"
        android:layout_toRightOf="@+id/email"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:text="info@marketdirect.ng"
        android:textColor="@android:color/black"
        android:textAppearance="?android:textAppearanceMedium" />

    <ImageView
        android:id="@+id/website"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/website" />

    <TextView
        android:id="@+id/text_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/website"
        android:layout_toEndOf="@+id/website"
        android:layout_toRightOf="@+id/website"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:text="www.marketdirect.ng"
        android:textColor="@android:color/black"
        android:textAppearance="?android:textAppearanceMedium" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/website"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/location" />

    <TextView
        android:id="@+id/text_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/location"
        android:layout_toEndOf="@+id/location"
        android:layout_toRightOf="@+id/location"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:text="17, Kudirat Abiola Way, Alausa, Ikeja, Lagos"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/clock"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/location"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/clock" />

    <TextView
        android:id="@+id/text_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/clock"
        android:layout_toEndOf="@+id/clock"
        android:layout_toRightOf="@+id/clock"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:text="9am - 6pm everyday"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black" />


</RelativeLayout>


